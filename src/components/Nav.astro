---
import logo from '../assets/logo-hybrid.svg'
---

<style>
  .logo {
    height: 24px;
  }

  .navbar {
    box-shadow: var(--shadow-2);
    height: 48px;
    line-height: 0;
  }

  .navbar li {
    display: grid;
    max-inline-size: none;
    place-items: center;
  }

  .navbar li,
  .navbar ul {
    padding-inline-start: 0;
  }

  .navbar ul {
    display: grid;
    height: inherit;
  }
</style>
<nav class="navbar">
  <ul>
    <li>
      <a href="/">
        <img
          alt="Logo of Macchiato."
          class="logo"
          src={logo}
        />
      </a>
    </li>
  </ul>
</nav>
